<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>
    <target name="identitylogfile"
            xsi:type="File"
            fileName="c:\temp\Identity.log"
            layout="[start]|${level:uppercase=true}|${logger}|${message}|[end]" />
    <target name="console"
            xsi:type="ColoredConsole"
            layout="[${level:uppercase=true}:${logger}] ${message}"/>
  </targets>

  <rules>
    <logger name="*Manager*" minlevel="Info" writeTo="identitylogfile,console" />
    <logger name="*Store*" minlevel="Info" writeTo="identitylogfile,console" />
  </rules>
</nlog>
